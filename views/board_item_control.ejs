			$('#m_temp_pw_form').show();

			$('#m_name_reply').val('');	
			$('#m_temp_user').val('');
			$('#m_temp_pw').val('');			
			$('#m_content_reply').val('');
		}
		else
		{
			$('#m_name_form').show();
			$('#m_temp_user_form').hide();
			$('#m_temp_pw_form').hide();

			$('#m_name_reply').val(m_name);	
			$('#m_temp_user').val('');
			$('#m_temp_pw').val('');			
			$('#m_content_reply').val('');
		}
