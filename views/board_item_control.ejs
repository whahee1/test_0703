	});

	$("#replyOkBtn").click(function()
	{
		if(idx_user==0)
			insertTempReplyItem();
		else
			insertReplyItem();
	});

	$("#editBtn").click(function()
	{
		$.mobile.changePage( "#editDialog", { role: "dialog" } );
	});	

	$("#editBtn_dialog").click(function()
	{	
		if(idx_user==0)
		{
